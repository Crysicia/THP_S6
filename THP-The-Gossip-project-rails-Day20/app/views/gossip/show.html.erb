<div class="d-flex">
  <div class="card mx-auto" style="max-width: 500px; margin-top: 2rem;">
   <div class="card-header">
    <%= @gossip.created_at.to_formatted_s(:short) %>
  </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>
          <%= @gossip.content %>
        </p>
        <footer class="blockquote-footer">
          <%= @gossip.author %>
        </footer>
      </blockquote>
    </div>
  </div>
</div>
