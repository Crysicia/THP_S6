

    <!-- Header -->
    
      <div class="container d-flex h-100 align-items-center">
        <div class="mx-auto text-center">
        <a class="navbar-brand js-scroll-trigger" href="/">Home</a>
          <h1 class="mx-auto my-0 text-uppercase">CRYPTOS</h1> 
<form class="form-inline d-flex">
              <%= form_tag(search_path method: :get) do %>
             
              <%= text_field_tag :name, params[:name], class: "form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0",placeholder: 'Search for currencies...' %>
              <%= submit_tag 'Search', :class =>"btn btn-primary mx-auto", name: nil %>
             
              <%end%>
            </form>
          <%@crypto.each do |x| %>
          <img src="https://s2.coinmarketcap.com/static/img/coins/32x32/<%=x.id%>.png">
            <%=x.name %>:
            <%= x.value %>$</br>
          <%end%>

    </header>


    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

