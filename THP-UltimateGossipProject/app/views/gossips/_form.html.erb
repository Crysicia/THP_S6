<div class="container">
  <%= form_with(model: gossip, local: true) do |form| %>
  <% if gossip.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(gossip.errors.count, "error") %> prohibited this gossip from being saved:</h2>
    <ul>
      <% gossip.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label 'Title' %>
      <%= form.text_field :title, class: "form-control", placeholder: "My awesome story !" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label 'Username' %>
      <%= form.text_field :anonymous_gossiper, class: "form-control", placeholder: 'Take your secret identity' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label 'Content' %>
    <%= form.text_area :content, class: "form-control", placeholder: "Talk about your life..." %>
  </div>
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <% if request.env['PATH_INFO'] =~ /gossips\/\d\/edit/ %>
    <%= link_to 'Show', @gossip, class: "btn btn-outline-secondary" %>
    <% end %>
    <%= link_to 'Back', gossips_path, class: "btn btn-outline-secondary"%>
  </div>
  <% end %>
</div>
