<div class="container mt-100 mb-100">
	<div class="row">
		<div class="col-lg-6 col-sm-12">

		<h3 class="mt-5">Bonjour, <%= @user.email %></h3>
		<%= link_to "Edit profile", edit_user_registration_path(current_user.id), class: "btn essence-btn mt-3" %>
		</div>
			<div class="container">
				<h5 class="mt-5 mb-4">Your last orders</h5>
				
				<table class="table mb-100">
					<% i = 0 %>
					<% @user.orders.each do |o|  %>

					<% if o.cart_items.count != 0 %>
				  <thead>
				    <tr>
				      <th scope="col">Order <%= i += 1 %></th>
				      <th scope="col">Item</th>
				      <th scope="col">Quantity</th>
				      <th scope="col">Price</th>
				    </tr>
				  </thead>
				  <tbody>
				  	<% o.cart_items.each do |order| %>
				    <tr>
				      <th scope="row"></th>
				      <td><%= order.item.title %></td>
				      <td><%= order.quantity %> </td>
				      <td><%= number_to_currency( order.item.price * order.quantity, :unit=>'â‚¬') %></td>
				    </tr>
				    <% end %>
				  </tbody>
				  <% end %>
				  <% end %>
				</table>
			
			<%= link_to "Shop", item_index_path, class: "btn essence-btn mt-3" %>
			</div>

		
	</div>
</div>
